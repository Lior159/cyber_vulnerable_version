<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="css/update_password_styles.css" />

    <title>Update Password</title>
  </head>

  <body>
    <div class="signup">
      <img
        src="img/update_password_bg.jpg"
        alt="signup image"
        class="signup__img"
      />

      <div class="menu">
        <div class="menu__button">
          <i class="fa-solid fa-bars"></i>
        </div>
        <div class="menu__content">
          <a href="/logout" class="menu__item">Logout</a>
          <a href="/update" class="menu__item">Update Password</a>
          <a href="/create_customer" class="menu__item">Create Customer</a>
        </div>
      </div>

      <form
        action="/update"
        method="POST"
        class="signup__form"
        autocomplete="off"
      >
        <h1 class="signup__title">Update Password</h1>

        <div class="signup__content">
          <div class="signup__box">
            <i class="fa-solid fa-lock signup__icon"></i>
            <div class="signup__box-input">
              <input
                type="password"
                name="curPassword"
                required
                class="signup__input"
                id="signup-pass"
                placeholder=" "
              />
              <label for="signup-pass" class="signup__label"
                >Current password</label
              >
              <i class="fa-solid fa-eye-slash signup__eye" id="signup-eye"></i>
            </div>
          </div>
        </div>

        <div class="signup__content">
          <div class="signup__box">
            <i class="fa-solid fa-lock signup__icon"></i>
            <div class="signup__box-input">
              <input
                type="password"
                name="newPassword"
                required
                class="signup__input"
                id="signup-new-pass"
                placeholder=" "
              />
              <label for="signup-pass" class="signup__label"
                >New Password</label
              >
              <i
                class="fa-solid fa-eye-slash signup__eye"
                id="signup-new-eye"
              ></i>
            </div>
          </div>
        </div>

        <button type="submit" class="signup__button">Submit</button>

        <% if (typeof errorMessage !== 'undefined' ) { %>
        <div class="error-message">
          <p>- errorMessage %></p>
        </div>
        <% } %>
      </form>
    </div>

    <!--=============== MAIN JS ===============-->
    <script src="js/update_password.js"></script>
  </body>
</html>
